  "keywords": [],
  "repository": "https://github.com/Davex-254/VENOM-X",
  "stack": "container",
  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ],
  "scripts": {
    "start": "node index.js"
  },
  "env": {
    "SESSION_ID": {
      "description": "Must begin with 'DAVE-AI:~'",
      "value": "",
