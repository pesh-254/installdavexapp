    "OWNER_NUMBER": {
      "description": "Your WhatsApp number",
      "value": "254104260236",
      "required": true
    }
  },  
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/DuckyTeam/heroku-buildpack-imagemagick.git"
    },
    {
